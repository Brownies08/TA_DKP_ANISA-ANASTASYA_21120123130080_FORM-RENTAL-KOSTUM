    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        if (!RulesCheckbox.isSelected()) {
                    JOptionPane.showMessageDialog(null, "Anda harus menyetujui rules sebelum submit.", "Jangan Lupa Baca Rules!", JOptionPane.WARNING_MESSAGE);
                    return;
                }

                String nama = NamaField.getText();
                String kostum = KostumBox.getSelectedItem().toString();
                String noHP = NoHPField.getText();
                String size = "";
                String TanggalPengembalian = (String) jComboBox1.getSelectedItem();

                if (sizeSButton.isSelected()) {
                    size = "S";
                } else if (sizeMButton.isSelected()) {
                    size = "M";
                } else if (sizeLButton.isSelected()) {
                    size = "L";
                } else if (sizeXLButton.isSelected()) {
                    size = "XL";
                }
                
                if (nama.isEmpty() || noHP.isEmpty() || size.isEmpty() || TanggalPengembalian.isEmpty()) {
                    JOptionPane.showMessageDialog(null, "Semua harus diisi sebelum melanjutkan pemesanan.", "Peringatan", JOptionPane.WARNING_MESSAGE);
                    return;
                }
                int ekspedisiHari = 0;
if ("TIKI (1 Hari)".equals(TanggalPengembalian)) {
    ekspedisiHari = 1;
} else if ("SiCepat (2 Hari)".equals(TanggalPengembalian)) {
    ekspedisiHari = 2;
} else if ("JNE (3 Hari)".equals(TanggalPengembalian)) {
    ekspedisiHari = 3;
} else if ("Lion Parcel (4 Hari)".equals(TanggalPengembalian)) {
    ekspedisiHari = 4;
}

if (ekspedisiHari == 0) {
    JOptionPane.showMessageDialog(null, "Anda harus memilih salah satu opsi ekspedisi.", "Peringatan", JOptionPane.WARNING_MESSAGE);
    return;
}

// Menghitung tanggal pengembalian (hari ekspedisi + 3 hari)
int totalHari = ekspedisiHari + 3;
LocalDate tanggalSekarang = LocalDate.now();
LocalDate tanggalPengembalian = tanggalSekarang.plusDays(totalHari);


                String hasil = 
                        "Nama perental: " + nama + "\n" +
                        "No Whatsapp: " + noHP + "\n" +
                        "Kostum: " + kostum + "\n" +
                        "Ukuran kostum: " + size + "\n" + 
                        "Tanggal pengembalian: " + tanggalPengembalian;


                new Hasil(hasil).setVisible(true);
                this.dispose();
    }                                        

